<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC	 "-//mybatis.org//DTD Mapper 3.0//EN"
	"http:/mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	
	<mapper namespace="com.talk.report.mapper.ReportReplyMapper">
		
		<insert id="Insert">
			INSERT INTO reply_report (reportNum, reportreplyNum, reportId , reason) 
			VALUES
			(reportreplyNum.nextval, #{reportId}, #{reason})
		</insert>
		
		<update id="Update">
			UPDATE reply_report 
			SET 
			reason=#{reason}, reportId=#{reportId}
		</update>
		
		<delete id="Delete">
			DELETE FROM reply_report 
			WHERE 
			reportNum=#{reportreplyNum}
		</delete>
	
		<select id="ALlList" resultType="com.talk.report.domain.ReportReplyVO">
			SELECT * FROM reply_report
			ORDER BY reportreplyNum DESC
		
		</select>
	</mapper>